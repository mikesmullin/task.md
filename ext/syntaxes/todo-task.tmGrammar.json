{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Todo Task",
  "scopeName": "source.todo-task",
  "patterns": [
    {
      "include": "#markdown-heading"
    },
    {
      "include": "#markdown-bold"
    },
    {
      "include": "#markdown-italic"
    },
    {
      "include": "#markdown-code-inline"
    },
    {
      "include": "#task-line"
    }
  ],
  "repository": {
    "markdown-heading": {
      "patterns": [
        {
          "match": "^(#{1}\\s+.*)$",
          "name": "markup.heading.1.markdown"
        },
        {
          "match": "^(#{2}\\s+.*)$",
          "name": "markup.heading.2.markdown"
        },
        {
          "match": "^(#{3}\\s+.*)$",
          "name": "markup.heading.3.markdown"
        },
        {
          "match": "^(#{4}\\s+.*)$",
          "name": "markup.heading.4.markdown"
        },
        {
          "match": "^(#{5}\\s+.*)$",
          "name": "markup.heading.5.markdown"
        },
        {
          "match": "^(#{6}\\s+.*)$",
          "name": "markup.heading.6.markdown"
        }
      ]
    },
    "task-line": {
      "match": "^(\\s*)(-)\\s+(.*)$",
      "captures": {
        "1": {
          "name": "punctuation.whitespace.leading.todo-task"
        },
        "2": {
          "name": "punctuation.definition.list.begin.todo-task"
        },
        "3": {
          "patterns": [
            {
              "include": "#task-content"
            }
          ]
        }
      }
    },
    "task-content": {
      "patterns": [
        {
          "match": "(@[A-Za-z_][A-Za-z0-9_-]*)",
          "name": "constant.numeric"
        },
        {
          "match": "(#[A-Za-z_][A-Za-z0-9_-]*)",
          "name": "entity.name.tag"
        },
        {
          "match": "\\b([ABCD])\\b",
          "name": "keyword.control"
        },
        {
          "match": "\\b(x)\\b",
          "name": "markup.deleted"
        },
        {
          "include": "#quoted-string"
        },
        {
          "match": "([A-Za-z_][A-Za-z0-9_-]*)(:)",
          "captures": {
            "1": {
              "name": "support.type.property-name"
            },
            "2": {
              "name": "punctuation.separator.key-value"
            }
          }
        }
      ]
    },
    "quoted-string": {
      "patterns": [
        {
          "name": "string.quoted.double",
          "begin": "\"",
          "end": "\""
        },
        {
          "name": "string.quoted.single",
          "begin": "'",
          "end": "'"
        },
        {
          "name": "string.quoted.backtick",
          "begin": "`",
          "end": "`"
        }
      ]
    },
    "markdown-bold": {
      "name": "markup.bold.markdown",
      "begin": "\\*\\*",
      "end": "\\*\\*"
    },
    "markdown-italic": {
      "name": "markup.italic.markdown",
      "begin": "\\*",
      "end": "\\*"
    },
    "markdown-code-inline": {
      "name": "markup.inline.raw.markdown",
      "begin": "`",
      "end": "`"
    }
  }
}